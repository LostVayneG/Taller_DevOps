pipeline {
    agent any
    stages{
        stage('config'){
            steps{
                sh 'cp -rf ./rp-portfolio ./deploy/'
            }
        }
        stage('dir'){
            steps{
                sh 'chmod o+wrx rp-portfolio'
                sh 'rp-portfolio/'
            }
        }
        stage('build'){
            steps{
                sh 'ls -l'
                sh 'python manage.py makemigrations projects'
                sh 'python manage.pymanage.py migrate projects'
            }
        }
        stage('deploy'){
            steps{
                sh 'cd /deploy/rp-portfolio/'
                sh 'python manage.py runserver'
            }
        }
    }
}
